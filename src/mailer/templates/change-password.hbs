      }
      .header h1 {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 10px;
      }
      .content {
        padding: 40px 30px;
      }
      .greeting {
        font-size: 18px;
        font-weight: 500;
        margin-bottom: 20px;
        color: #2d3748;
      }
      .message {
        font-size: 16px;
        color: #4a5568;
        margin-bottom: 25px;
        line-height: 1.8;
      }
      .info-box {
        background: #f7fafc;
        border-left: 4px solid #4299e1;
        padding: 20px;
        border-radius: 4px;
        margin: 25px 0;
      }
      .info-box p {
        margin: 0;
        color: #2d3748;
        font-size: 14px;
      }
      .security-alert {
        background: #fff5f5;
        border: 1px solid #fed7d7;
        border-radius: 8px;
        padding: 20px;
        margin: 30px 0;
      }
      .security-alert h3 {
        color: #c53030;
        font-size: 16px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .security-alert p {
        color: #742a2a;
        font-size: 14px;
        margin: 0;
        line-height: 1.6;
      }
      .tips {
        background: #f0fff4;
        border-radius: 8px;
        padding: 20px;
        margin: 25px 0;
      }
      .tips h3 {
        color: #2f855a;
        font-size: 16px;
        margin-bottom: 15px;
      }
      .tips ul {
        padding-left: 20px;
        color: #276749;
      }
      .tips li {
        margin-bottom: 8px;
        font-size: 14px;
      }
      .footer {
        background: #edf2f7;
        padding: 25px 30px;
        text-align: center;
        color: #718096;
        font-size: 12px;
      }
      .support {
        margin: 20px 0;
        text-align: center;
      }
      .support a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
      }
      .datetime {
        text-align: center;
        color: #a0aec0;
        font-size: 14px;
        margin: 15px 0;
        padding: 10px;
        background: #f8f9fa;
        border-radius: 6px;
      }
